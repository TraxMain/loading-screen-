-- Create GUI elements for the loading screen
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Create a frame for the loading screen
local loadingFrame = Instance.new("Frame")
loadingFrame.Size = UDim2.new(0, 400, 0, 150) -- Smaller box size
loadingFrame.Position = UDim2.new(0.5, -200, 0.5, -75) -- Centered on screen
loadingFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
loadingFrame.BackgroundTransparency = 0.2 -- Less transparent
loadingFrame.Parent = screenGui

-- Set rounded corners for the frame
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15) -- Smooth corners
corner.Parent = loadingFrame

-- Create a label for the "Checking for alt" text
local checkingLabel = Instance.new("TextLabel")
checkingLabel.Size = UDim2.new(0, 400, 0, 50)
checkingLabel.Position = UDim2.new(0, 0, 0, 10) -- Above the loading text
checkingLabel.Text = "Checking for alt, please wait."
checkingLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
checkingLabel.TextSize = 20
checkingLabel.BackgroundTransparency = 1
checkingLabel.Parent = loadingFrame

-- Create a label for the loading text
local loadingLabel = Instance.new("TextLabel")
loadingLabel.Size = UDim2.new(0, 300, 0, 50)
loadingLabel.Position = UDim2.new(0.5, -150, 0.5, -25) -- Centered on screen
loadingLabel.Text = "Loading"
loadingLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingLabel.TextSize = 30
loadingLabel.BackgroundTransparency = 1
loadingLabel.Parent = loadingFrame

-- Create a label for the "(should take 50 seconds)" text under the loading message
local timeLabel = Instance.new("TextLabel")
timeLabel.Size = UDim2.new(0, 400, 0, 20) -- Smaller size
timeLabel.Position = UDim2.new(0, 0, 0, 115) -- Positioned further down
timeLabel.Text = "(should take 50 seconds)"
timeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
timeLabel.TextSize = 14 -- Smaller text size
timeLabel.BackgroundTransparency = 1
timeLabel.TextTransparency = 0.6 -- More transparent
timeLabel.Parent = loadingFrame

-- Function to animate the loading text
local function animateLoadingText()
    local dots = ""
    while true do
        for i = 1, 3 do
            dots = string.rep(".", i)
            loadingLabel.Text = "Loading" .. dots
            wait(0.5) -- Wait 0.5 seconds before updating the text
        end
    end
end

-- Function to remove the loading screen after 50 seconds and show the error message
local function removeLoadingScreen()
    wait(50) -- Wait for 50 seconds
    loadingFrame:Destroy() -- Removes the loading screen
    
    -- Show the error message
    local message = require(game.ReplicatedStorage.Library.Client.Message)
    message.Error("Alt account detected! Please use your main.")
end

-- Start the animation in a separate thread
spawn(animateLoadingText)

-- Call the function to remove the loading screen and show the error message
removeLoadingScreen()
